{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "fh-supercore",
    "annotations": {
      "description": "RHMAP fh-supercore",
      "tags": "rhmap,mobile,nodejs",
      "iconClass": "icon-nodejs"
    }
  },
  "parameters": [
    {
      "name": "FH_STATSD_API_KEY",
      "value": "test",
      "required": true
    },
    {
      "name": "FH_SUPERCORE_IMAGE",
      "value": "rhmap42/fh-supercore",
      "description": "The name of the fh-supercore image",
      "required": true
    },
    {
      "name": "FH_SUPERCORE_IMAGE_VERSION",
      "value": "3.22.5-1",
      "description": "The version for the FH_SUPERCORE_IMAGE",
      "required": true
    },
    {
      "name": "CLUSTER_NAME",
      "value": "rhmap",
      "description": "The name of this RHMAP Core cluster",
      "required": true
    },
    {
      "name": "FH_LOG_LEVEL",
      "value": "info",
      "description": "A default log level for all components"
    },
    {
      "name": "MONGODB_FHSUPERCORE_USER",
      "value": "u-supercore",
      "description": "The MongoDB username for fh-supercore",
      "required": true
    },
    {
      "name": "MONGODB_FHSUPERCORE_PASSWORD",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}",
      "description": "The MongoDB password for fh-supercore",
      "required": true
    },
    {
      "name": "REDIS_PASSWORD",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}",
      "description": "The Redis password for fh-supercore",
      "required": true
    },
    {
      "name": "FH_MESSAGING_API_KEY",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}",
      "description": "Key for communicating with the FH_MESSAGING Service",
      "required": true
    },
    {
      "name": "FH_METRICS_API_KEY",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}",
      "description": "Key for communicating with the FH_METRICS Service",
      "required": true
    },
    {
      "name": "FH_MILLICORE_API_KEY",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}",
      "description": "Key for communicating with the millicore Service",
      "required": true
    },
    {
      "name": "MEMCACHED_SERVICE_NAME",
      "value": "memcached",
      "description": "The memcached service name",
      "required": true
    },
    {
      "name": "MONGODB_SERVICE_NAME",
      "value": "mongodb-1",
      "description": "The mongodb service name"
    },
    {
      "name": "REDIS_SERVICE_NAME",
      "value": "redis",
      "description": "The redis service name",
      "required": true
    },
    {
      "name": "FH_MILLICORE_SERVICE_KEY",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}",
      "description": "Key for communicating with the millicore Service",
      "required": true
    },
    {
      "name": "FH_AAA_SERVICE_HOST",
      "value": "fh-aaa",
      "required": true
    }
  ],
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "fh-supercore",
        "labels": {
          "name": "fh-supercore"
        }
      },
      "spec": {
        "selector": {
          "name": "fh-supercore"
        },
        "ports": [
          {
            "port": 8080
          }
        ]
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "fh-supercore",
        "labels": {
          "name": "fh-supercore"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "fh-supercore"
        },
        "template": {
          "metadata": {
            "labels": {
              "name": "fh-supercore"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "fh-supercore",
                "image": "${FH_SUPERCORE_IMAGE}:${FH_SUPERCORE_IMAGE_VERSION}",
                "ports": [
                  {
                    "containerPort": 8080
                  }
                ],
                "livenessProbe": {
                  "httpGet": {
                    "path": "/sys/info/ping",
                    "port": 8080
                  },
                  "initialDelaySeconds": 55,
                  "timeoutSeconds": 5,
                  "periodSeconds": 60,
                  "successThreshold": 1,
                  "failureThreshold": 2
                },
                "readinessProbe": {
                  "httpGet": {
                    "path": "/sys/info/ping",
                    "port": 8080
                  },
                  "initialDelaySeconds": 0,
                  "timeoutSeconds": 5,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 1
                },
                "env": [
                  {
                    "name": "FH_AAA_SERVICE_HOST",
                    "value": "fh-aaa"
                  },
                  {
                    "name": "FH_AAA_SERVICE_PORT",
                    "value": "8080"
                  },
                  {
                    "name": "FH_MILLICORE_SERVICE_HOST",
                    "value": "http://millicore"
                  },
                  {
                    "name": "FH_MILLICORE_SERVICE_PORT",
                    "value": "8080"
                  },
                  {
                    "name": "FH_SCM_SERVICE_HOST",
                    "value": "fh-scm"
                  },
                  {
                    "name": "MEMCACHED_SERVICE_HOST",
                    "value": "memcached"
                  },
                  {
                    "name": "FH_MESSAGING_SERVICE_HOST",
                    "value": "fh-messaging"
                  },
                  {
                    "name": "FH_MESSAGING_SERVICE_PORT",
                    "value": "8080"
                  },
                  {
                    "name": "FH_MESSAGING_API_KEY",
                    "value": "${FH_MESSAGING_API_KEY}"
                  },
                  {
                    "name": "FH_METRICS_SERVICE_HOST",
                    "value": "fh-metrics"
                  },
                  {
                    "name": "FH_METRICS_SERVICE_PORT",
                    "value": "8080"
                  },
                  {
                    "name": "FH_METRICS_API_KEY",
                    "value": "${FH_METRICS_API_KEY}"
                  },
                  {
                    "name": "FH_UPS_SERVICE_HOST",
                    "value": "ups"
                  },
                  {
                    "name": "FH_UPS_SERVICE_PORT",
                    "value": "8080"
                  },
                  {
                    "name": "FH_SCM_SERVICE_PORT",
                    "value": "8080"
                  },
                  {
                    "name": "FH_MILLICORE_SERVICE_KEY",
                    "value": "${FH_MILLICORE_SERVICE_KEY}"
                  },
                  {
                    "name": "FH_MILLICORE_API_KEY",
                    "value": "${FH_MILLICORE_API_KEY}"
                  },
                  {
                    "name": "MONGODB_SERVICE_NAME",
                    "value": "${MONGODB_SERVICE_NAME}"
                  },
                  {
                    "name": "CLUSTER_NAME",
                    "value": "${CLUSTER_NAME}"
                  },
                  {
                    "name": "FH_LOG_LEVEL",
                    "value": "${FH_LOG_LEVEL}"
                  },
                  {
                    "name": "MONGODB_FHSUPERCORE_USER",
                    "value": "${MONGODB_FHSUPERCORE_USER}"
                  },
                  {
                    "name": "MONGODB_FHSUPERCORE_PASSWORD",
                    "value": "${MONGODB_FHSUPERCORE_PASSWORD}"
                  },
                  {
                    "name": "REDIS_PASSWORD",
                    "value": "${REDIS_PASSWORD}"
                  },
                  {
                    "name": "FH_MESSAGING_API_KEY",
                    "value": "${FH_MESSAGING_API_KEY}"
                  },
                  {
                    "name": "FH_METRICS_API_KEY",
                    "value": "${FH_METRICS_API_KEY}"
                  },
                  {
                    "name": "FH_STATSD_API_KEY",
                    "value": "${FH_STATSD_API_KEY}"
                  },
                  {
                    "name": "REDIS_SERVICE_NAME",
                    "value": "${REDIS_SERVICE_NAME}"
                  },
                  {
                    "name": "REDIS_SERVICE_PORT",
                    "value": "6379"
                  }
                ],
                "imagePullPolicy": "IfNotPresent"
              }
            ]
          }
        }
      }
    }
  ]
}
