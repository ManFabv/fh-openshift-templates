{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "fh-messaging",
    "annotations": {
      "templateVersion": "0.20.12",
      "description": "Red Hat Mobile fh-messaging template",
      "iconClass": "icon-nodejs"
    }
  },
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "fh-messaging",
        "labels": {
          "name": "fh-messaging"
        }
      },
      "spec": {
        "ports": [
          {
            "port": 8080
          }
        ],
        "selector": {
          "name": "fh-messaging"
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "fh-messaging",
        "labels": {
          "name": "fh-messaging"
        }
      },
      "spec": {
        "strategy": {
          "type": "Rolling",
          "resources": {
            "limits": {
              "cpu": "400m",
              "memory": "400Mi"
            },
            "requests": {
              "cpu": "200m",
              "memory": "200Mi"
            }
          }
        },
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "fh-messaging"
        },
        "template": {
          "metadata": {
            "labels": {
              "name": "fh-messaging"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "fh-messaging",
                "image": "${FH_MESSAGING_IMAGE}:${FH_MESSAGING_IMAGE_VERSION}",
                "ports": [
                  {
                    "containerPort": 8080
                  }
                ],
                "env": [
                  {
                    "name": "FH_MESSAGING_CRON",
                    "value": "10 07 * * *"
                  },
                  {
                    "name": "MONGODB_FHREPORTING_USER",
                    "value": "${MONGODB_FHREPORTING_USER}"
                  },
                  {
                    "name": "MONGODB_FHREPORTING_PASSWORD",
                    "value": "${MONGODB_FHREPORTING_PASSWORD}"
                  },
                  {
                    "name": "MONGODB_FHREPORTING_DATABASE",
                    "value": "fh-reporting"
                  },
                  {
                    "name": "FH_MESSAGING_API_KEY",
                    "description": "API Key for calling fh-messaging",
                    "value": "${FH_MESSAGING_API_KEY}"
                  },
                  {
                    "name": "FH_LOG_LEVEL",
                    "value": "${FH_DEFAULT_LOG_LEVEL}"
                  }
                ],
                "resources": {
                  "limits": {
                    "cpu": "400m",
                    "memory": "400Mi"
                  },
                  "requests": {
                    "cpu": "200m",
                    "memory": "200Mi"
                  }
                },
                "livenessProbe": {
                  "httpGet": {
                    "path": "/sys/info/ping",
                    "port": 8080
                  },
                  "initialDelaySeconds": 55,
                  "timeoutSeconds": 5,
                  "periodSeconds": 60,
                  "successThreshold": 1,
                  "failureThreshold": 2
                },
                "readinessProbe": {
                  "httpGet": {
                    "path": "/sys/info/ping",
                    "port": 8080
                  },
                  "initialDelaySeconds": 0,
                  "timeoutSeconds": 5,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 1
                },
                "imagePullPolicy": "IfNotPresent"
              }
            ]
          }
        }
      }
    }
  ],
  "parameters": [
    {
      "name": "FH_MESSAGING_API_KEY",
      "description": "Key for communicating with the FH_MESSAGING Service",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}"
    },
    {
      "name": "FH_MESSAGING_IMAGE",
      "value": "docker.io/rhmap/fh-messaging",
      "description": "The name of the fh-messaging image"
    },
    {
      "name": "FH_MESSAGING_IMAGE_VERSION",
      "value": "2.1.1-386",
      "description": "The version for the FH_MESSAGING_IMAGE"
    },
    {
      "name": "MONGODB_FHREPORTING_USER",
      "value": "u-reporting",
      "description": "The Reporting user name"
    },
    {
      "name": "MONGODB_FHREPORTING_PASSWORD",
      "description": "The MongoDB Reporting password",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}"
    },
    {
      "name": "FH_DEFAULT_LOG_LEVEL",
      "description": "A default log level for all MBaaS components",
      "value": "info"
    }
  ]
}
