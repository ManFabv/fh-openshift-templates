{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "fh-metrics",
    "creationTimestamp": null,
    "annotations": {
      "description" : "fh-metrics deploy on openshift v3",
      "title" : "fh-metrics"
    }
  },
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "fh-metrics-service",
        "labels": {
          "name": "fh-metrics-service"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "fh-metrics-service-ports",
            "protocol": "TCP",
            "port": 8080,
            "targetPort": 8080,
            "nodePort": 0
          }
        ],
        "selector": {
          "name": "fh-metrics"
        },
        "portalIP": "",
        "type": "ClusterIP",
        "sessionAffinity": "None"
      },
      "status": {
        "loadBalancer": {}
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "fh-metrics",
        "creationTimestamp": null
      },
      "spec": {
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "updatePeriodSeconds": 1,
            "intervalSeconds": 1,
            "timeoutSeconds": 120
          },
          "resources": {}
        },
        "replicas": 1,
        "selector": {
          "name": "fh-metrics"
        },
        "template": {
          "metadata": {
            "creationTimestamp": null,
            "labels": {
              "name": "fh-metrics"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "fh-metrics",
                "image": "openshift/fh-metrics",
                "ports": [
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "MONGODB_FHMETRICS_USER",
                    "description": "fhmetrics db user",
                    "value":"u-mbaas"
                  },
                  {
                    "name": "MONGODB_FHMETRICS_PASSWORD",
                    "description": "fhmessaging db user password",
                    "value":"u-mbaas-pass"
                  },
                  {
                    "name": "MONGODB_FHMETRICS_DATABASE",
                    "description": "fhmetrics db",
                    "value":"fh-metrics"
                  }
                ],
                "resources": {},
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "IfNotPresent",
                "capabilities": {},
                "securityContext": {
                  "capabilities": {},
                  "privileged": false
                }
              }
            ],
            "restartPolicy": "Always",
            "dnsPolicy": "ClusterFirst",
            "serviceAccount": ""
          }
        }
      },
      "status": {}
    }
  ],
  "parameters": [
    {
      "name": "MONGODB_ADMIN_PASSWORD",
      "description": "Password for the MongoDB admin user",
      "value":"supersecuretoo"
    },
    {
      "name": "MONGODB_FHMBAAS_USER",
      "description": "fhmbaas db user",
      "value":"u-mbaas"
    },
    {
      "name": "MONGODB_FHMBAAS_PASSWORD",
      "description": "fhmbaas db user password",
      "value":"u-mbaas-pass"
    },{
      "name": "MONGODB_FHREPORTING_USER",
      "description": "fhreporting db user",
      "value":"u-reporting"
    },{
      "name": "MONGODB_FHREPORTING_PASSWORD",
      "description": "fhreporting db user pass",
      "value":"u-reporting-pass"
    },{
      "name": "MONGODB_FHMETRICS_USER",
      "description": "fhmetrics db user",
      "value":"u-metrics"
    },{
      "name": "MONGODB_FHMETRICS_PASSWORD",
      "description": "fhmetrics db user pass",
      "value":"u-metrics-pass"
    },{
      "name": "MONGODB_FHMBAAS_DATABASE",
      "description": "fhmbaas db",
      "value":"fh-mbaas"
    },{
      "name": "MONGODB_FHREPORTING_DATABASE",
      "description": "fhreporting db",
      "value":"fh-reporting"
    },{
      "name": "MONGODB_FHMETRICS_DATABASE",
      "description": "fhmetrics db",
      "value":"fh-metrics"
    },
    {
      "name": "MONGODB_REPLICA_NAME",
      "description": " The name of the replSet ",
      "value": "rs0"
    },
    {
      "name": "MONGODB_SERVICE_NAME",
      "description": "The name of the MongoDB Service (used to DNS lookup, default: 'mongodb')",
      "value": "mongodb-service"
    },
    {
      "name": "MONGODB_KEYFILE_VALUE",
      "description": "The value of the MongoDB Key",
      "value":"supersecuretoo"
    }
  ],
  "labels": {
    "template": "fh-metrics-template"
  }
}
