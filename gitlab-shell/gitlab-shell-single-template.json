{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "gitlab-shell",
    "annotations": {
      "description": "Gitlab Shell",
      "tags": "gitlab-shell"
    }
  },
  "parameters": [
    {
      "name": "GITLAB_SHELL_IMAGE",
      "value": "rhmap/gitlab-shell",
      "description": "The name of the gitlab-shell image"
    },
    {
      "name": "GITLAB_SHELL_IMAGE_VERSION",
      "value": "2.0.0.pre-29",
      "description": "The version for the GITLAB_SHELL_IMAGE"
    },
    {
      "name": "GITLAB_URL",
      "value": "http://millicore:8080/box/api/gls/",
      "description": "The URL that GitLab is exposed at"
    },
    {
      "name": "RABBITMQ_SERVICE",
      "value": "rabbitmq-service",
      "description": "The location of the RabbitMQ service"
    },
    {
      "name": "RABBITMQ_VHOST",
      "value": "fhtasks",
      "description": "The RabbitMQ vHost"
    },
    {
      "name": "RABBITMQ_USER",
      "value": "fhtasksuser",
      "description": "The RabbitMQ user"
    },
    {
      "name": "RABBITMQ_PASSWORD",
      "description": "The RabbitMQ password.",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{15}"
    },
    {
      "name": "RABBITMQ_QUEUE",
      "value": "fh-tasks-gitlab-postreceive",
      "description": "The RabbitMQ queue"
    },
    {
      "name": "GIT_REPO_ROOT",
      "value": "/home/git/data",
      "description": "Path to data folder that would contain repositories and all other required files"
    },
    {
      "name": "SSH_SECRETS_DIR",
      "value": "/etc/feedhenry/gitlab-shell",
      "description": "Mount path for ssh keys"
    }
  ],
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "gitlab-shell",
        "labels": {
          "name": "gitlab-shell"
        }
      },
      "spec": {
        "selector": {
          "name": "gitlab-shell"
        },
        "ports": [
          {
            "port": 22
          }
        ]
      }
    },
    {
      "kind": "ConfigMap",
      "apiVersion": "v1",
      "metadata": {
        "name": "gitlab-shell"
      },
      "data": {
        "config.yml": "user: git\ngitlab_url: \"${GITLAB_URL}\"\nhttp_settings:\n  self_signed_cert: false\nrepos_path: \"${GIT_REPO_ROOT}/repositories\"\nauth_file: \"${GIT_REPO_ROOT}/.ssh/authorized_keys\"\nredis:\n  bin: /home/git/gitlab-shell/bin/dummy-redis-cli\n  database: 0\n  socket: /var/run/redis/redis.sock\n  namespace: resque:gitlab\nrabbit:\n  enabled: true\n  hosts:\n    - ${RABBITMQ_SERVICE}\n  vhost: ${RABBITMQ_VHOST}\n  user: ${RABBITMQ_USER}\n  password: ${RABBITMQ_PASSWORD}\n  queue: ${RABBITMQ_QUEUE}\nlog_level: INFO\naudit_usernames: false\n"
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "gitlab-shell",
        "labels": {
          "name": "gitlab-shell"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "gitlab-shell"
        },
        "template": {
          "metadata": {
            "labels": {
              "name": "gitlab-shell"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "gitlab-shell",
                "image": "${GITLAB_SHELL_IMAGE}:${GITLAB_SHELL_IMAGE_VERSION}",
                "ports": [
                  {
                    "containerPort": 22
                  }
                ],
                "livenessProbe": {
                  "tcpSocket": {
                    "port": 22
                  },
                  "initialDelaySeconds": 600,
                  "timeoutSeconds": 5,
                  "periodSeconds": 60,
                  "successThreshold": 1,
                  "failureThreshold": 2
                },
                "readinessProbe": {
                  "tcpSocket": {
                    "port": 22
                  },
                  "initialDelaySeconds": 2,
                  "timeoutSeconds": 5,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 1
                },
                "imagePullPolicy": "IfNotPresent",
                "env": [
                  {
                    "name": "GIT_REPO_ROOT",
                    "value": "${GIT_REPO_ROOT}"
                  },        
                  {
                    "name": "SSH_SECRETS_DIR",
                    "value": "${SSH_SECRETS_DIR}"
                  }
                ],
                "volumeMounts": [
                  {
                    "name": "gitlab-shell-configmap",
                    "mountPath": "/home/git/gitlab-config"
                  },
                  {
                    "name": "git-ssh-keys-volume",
                    "mountPath": "${SSH_SECRETS_DIR}",
                    "readOnly": true
                  },
                  {
                    "name": "git-data-volume",
                    "mountPath": "${GIT_REPO_ROOT}"
                  }
                ]
              }
            ],
            "volumes": [
              {
                "name": "gitlab-shell-configmap",
                "configMap": {
                  "name": "gitlab-shell"
                }
              },
              {
                "name": "git-ssh-keys-volume",
                "secret": {
                  "secretName": "gitlab-ssh"
                }
              },
              {
                "name": "git-data-volume",
                "emptyDir": {}
              }
            ],
            "securityContext": {
              "runAsUser": 0
            }
          }
        }
      }
    }
  ]
}
