{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "rhmap-core",
    "annotations": {
      "description": "RHMAP Core platform",
      "tags": "rhmap,mobile,nodejs",
      "iconClass": "icon-nodejs"
    }
  },
  "parameters": [
   {
      "name": "FH_SUPERCORE_IMAGE",
      "value": "rhmap/fh-supercore",
      "description": "The name of the fh-supercore image"
    },
    {
      "name": "FH_SUPERCORE_IMAGE_VERSION",
      "value": "latest",
      "description": "The version for the FH_SUPERCORE_IMAGE"
    }
  ],
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "fh-supercore",
        "labels": {
          "name": "fh-supercore"
        }
      },
      "spec": {
        "selector": {
          "name": "fh-supercore"
        },
        "ports": [
          {
            "protocol": "TCP",
            "port": 8080,
            "targetPort": 8080
          }
        ]
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "fh-supercore",
        "labels": {
          "name": "fh-supercore"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "fh-supercore"
        },
        "template": {
          "metadata": {
            "labels": {
              "name": "fh-supercore"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "fh-supercore",
                "image": "${FH_SUPERCORE_IMAGE}:${FH_SUPERCORE_IMAGE_VERSION}",
                "ports": [
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  }
                ],
                "env": [],
                "imagePullPolicy": "Always"
              }
            ]
          }
        }
      }
    }
  ]
}
