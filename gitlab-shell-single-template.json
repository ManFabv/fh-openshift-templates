{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "gitlab-shell",
    "annotations": {
      "description": "Gitlab Shell",
      "tags": "gitlab-shell"
    }
  },
  "parameters": [
    {
      "name": "GITLAB_SHELL_IMAGE",
      "value": "rhmap/gitlab-shell",
      "description": "The name of the gitlab-shell image"
    },
    {
      "name": "GITLAB_SHELL_IMAGE_VERSION",
      "value": "latest",
      "description": "The version for the GITLAB_SHELL_IMAGE"
    }
  ],
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "gitlab-shell",
        "labels": {
          "name": "gitlab-shell"
        }
      },
      "spec": {
        "selector": {
          "name": "gitlab-shell"
        },
        "ports": [
          {
            "port": 22
          }
        ]
      }
    },
    {
      "kind": "ConfigMap",
      "apiVersion": "v1",
      "metadata": {
        "name": "gitlab-shell"
      },
      "data": {
        "config.yml": "user: git\ngitlab_url: \"http://millicore:8080/box/api/gls/\"\nhttp_settings:\n  self_signed_cert: false\nrepos_path: \"/home/git/repositories\"\nauth_file: \"/home/git/.ssh/authorized_keys\"\nredis:\n  bin: /home/git/gitlab-shell/bin/dummy-redis-cli\n  database: 0\n  socket: /var/run/redis/redis.sock\n  namespace: resque:gitlab\nrabbit:\n  enabled: true\n  hosts:\n    - rabbit-service\n  vhost: fhtasks\n  user: fhtasksuser\n  password: fhtaskspassword\n  queue: fh-tasks-gitlab-postreceive\nlog_level: INFO\naudit_usernames: false\n"
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "gitlab-shell",
        "labels": {
          "name": "gitlab-shell"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "gitlab-shell"
        },
        "template": {
          "metadata": {
            "labels": {
              "name": "gitlab-shell"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "gitlab-shell",
                "image": "${GITLAB_SHELL_IMAGE}:${GITLAB_SHELL_IMAGE_VERSION}",
                "ports": [
                  {
                    "containerPort": 22
                  }
                ],
                "env": [],
                "imagePullPolicy": "IfNotPresent",
                "volumeMounts": [
                  {
                    "name": "gitlab-shell-configmap",
                    "mountPath": "/home/git/gitlab-config"
                  }
                ]
              }
            ],
            "volumes": [
              {
                "name": "gitlab-shell-configmap",
                "configMap": {
                  "name": "gitlab-shell"
                }
              }
            ],
            "securityContext": {
              "runAsUser": 0
            }
          }
        }
      }
    }
  ]
}
