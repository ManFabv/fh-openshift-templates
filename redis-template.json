{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "redis",
    "creationTimestamp": null,
    "annotations": {
      "description" : "Redis deploy on openshift v3",
      "title" : "redis"
    }
  },
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "redis-service",
        "labels": {
          "name": "redis-service"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "redis-service-ports",
            "protocol": "TCP",
            "port": 6379,
            "targetPort": 6379,
            "nodePort": 0
          }
        ],
        "selector": {
          "name": "redis"
        },
        "portalIP": "",
        "type": "ClusterIP",
        "sessionAffinity": "None"
      },
      "status": {
        "loadBalancer": {}
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "redis",
        "creationTimestamp": null
      },
      "spec": {
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "updatePeriodSeconds": 1,
            "intervalSeconds": 1,
            "timeoutSeconds": 120
          },
          "resources": {}
        },
        "replicas": 1,
        "selector": {
          "name": "redis"
        },
        "template": {
          "metadata": {
            "creationTimestamp": null,
            "labels": {
              "name": "redis"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "redis",
                "image": "fh-registry.feedhenry.net/redis",
                "ports": [
                  {
                    "containerPort": 6379,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "REDIS_USER",
                    "description": "redis user",
                    "value":"u-redis"
                  }
                ],
                "resources": {},
                "terminationMessagePath": "/dev/termination-log",
                "imagePullPolicy": "IfNotPresent",
                "capabilities": {},
                "securityContext": {
                  "capabilities": {},
                  "privileged": false
                }
              }
            ],
            "restartPolicy": "Always",
            "dnsPolicy": "ClusterFirst",
            "serviceAccount": ""
          }
        }
      },
      "status": {}
    }
  ],
  "parameters" : [
    {
      "name": "MONGODB_SERVICE_NAME",
      "description": "The name of the MongoDB Service (used to DNS lookup, default: 'mongodb')",
      "value": "mongodb-service"
    },
    {
      "name": "MONGODB_KEYFILE_VALUE",
      "description": "The value of the MongoDB Key",
      "value":"supersecuretoo"
    }
  ],
  "labels": {
    "template": "redis-template"
  }
}
