{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "rhmap-core",
    "annotations": {
      "description": "RHMAP Core platform",
      "tags": "rhmap,mobile,nodejs",
      "iconClass": "icon-nodejs"
    }
  },
  "parameters": [
    {
      "name": "FH_SCM_IMAGE",
      "value": "docker.io/rhmap/fh-scm",
      "description": "The name of the fh-scm image",
      "required": true
    },
    {
      "name": "FH_SCM_IMAGE_VERSION",
      "value": "1.0.5-311",
      "description": "The version for the FH_SCM_IMAGE",
      "required": true
    },
    {
      "name": "FH_SCM_PVC_SIZE",
      "value": "25Gi",
      "description": "The size of the volume for the fh-scm workspace where git repos are cloned for use by the Core"
    },
    {
      "name": "FH_LOG_LEVEL",
      "value": "info",
      "description": "A default log level for all components",
      "required": true
    },
    {
      "name": "FH_MILLICORE_SERVICE_HOST",
      "value": "millicore",
      "description": "TODO: remove references to me once millicore is running on OpenShift",
      "required": true
    },
    {
      "name": "FH_MILLICORE_SERVICE_PORT",
      "value": "8080",
      "description": "TODO: remove references to me once millicore is running on OpenShift",
      "required": true
    }
  ],
  "objects": [
    {
      "kind": "PersistentVolumeClaim",
      "apiVersion": "v1",
      "metadata": {
        "name": "scm-data"
      },
      "spec": {
        "accessModes": [
          "ReadWriteOnce"
        ],
        "resources": {
          "requests": {
            "storage": "${FH_SCM_PVC_SIZE}"
          }
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "fh-scm",
        "labels": {
          "name": "fh-scm"
        }
      },
      "spec": {
        "selector": {
          "name": "fh-scm"
        },
        "ports": [
          {
            "port": 8080
          }
        ]
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "fh-scm",
        "labels": {
          "name": "fh-scm"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "fh-scm"
        },
        "template": {
          "metadata": {
            "labels": {
              "name": "fh-scm"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "fh-scm",
                "image": "${FH_SCM_IMAGE}:${FH_SCM_IMAGE_VERSION}",
                "ports": [
                  {
                    "containerPort": 8080
                  }
                ],
                "livenessProbe": {
                  "httpGet": {
                    "path": "/sys/info/ping",
                    "port": 8080
                  },
                  "initialDelaySeconds": 55,
                  "timeoutSeconds": 5,
                  "periodSeconds": 60,
                  "successThreshold": 1,
                  "failureThreshold": 2
                },
                "readinessProbe": {
                  "httpGet": {
                    "path": "/sys/info/ping",
                    "port": 8080
                  },
                  "initialDelaySeconds": 0,
                  "timeoutSeconds": 5,
                  "periodSeconds": 10,
                  "successThreshold": 1,
                  "failureThreshold": 1
                },
                "env": [
                  {
                    "name": "FH_LOG_LEVEL",
                    "value": "${FH_LOG_LEVEL}"
                  },
                  {
                    "name": "FH_SCM_FILE_SERVER_PATH",
                    "value": "/opt/scm-data/fh-scm"
                  },
                  {
                    "name": "FH_SCM_FILE_SERVER_BACKUP",
                    "value": "/opt/scm-data/fh-scm/backup"
                  },
                  {
                    "name": "FH_SCM_FILE_SERVER_KEY_STORE",
                    "value": "/opt/scm-data/fh-scm/keystore"
                  },
                  {
                    "name": "FH_MILLICORE_SERVICE_HOST",
                    "value": "${FH_MILLICORE_SERVICE_HOST}"
                  },
                  {
                    "name": "FH_MILLICORE_SERVICE_PORT",
                    "value": "${FH_MILLICORE_SERVICE_PORT}"
                  }
                ],
                "volumeMounts": [
                  {
                    "name": "scm-data",
                    "mountPath": "/opt/scm-data"
                  }
                ],
                "imagePullPolicy": "IfNotPresent",
                "resources": {
                  "limits": {
                    "cpu": "800m",
                    "memory": "800Mi"
                  },
                  "requests": {
                    "cpu": "12m",
                    "memory": "70Mi"
                  }
                }
              }
            ],
            "volumes": [
              {
                "name": "scm-data",
                "persistentVolumeClaim": {
                  "claimName": "scm-data"
                }
              }
            ],
            "securityContext": {
              "runAsUser": 1001
            }
          }
        }
      }
    }
  ]
}
